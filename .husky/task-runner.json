{
   "variables": [
      {
         "name": "root-dir",
         "command": "cmd",
         "args": ["/c", "dir", "/b"]
      }
   ],
   "tasks": [
      {
         "name": "commit-message-linter",
         "command": "dotnet",
         "args": [
            "husky",
            "exec",
            ".husky/csx/commit-lint.csx",
            "--args",
            "${args}"
         ]
      },
      {
         "name": "dotnet-format",
         "group": "pre-commit",
         "command": "dotnet",
         "args": ["format", "./backend/src/"],
         "include": ["**/*.cs", "**/*.vb"]
      },
      {
         "name": "dotnet-test",
         "group": "pre-commit",
         "command": "dotnet",
         "args": ["test", "./backend/src/"],
         "include": ["**/*.cs", "**/*.vb"]
      },
      {
         "name": "warning-check",
         "command": "dotnet",
         "group": "pre-commit",
         "args": ["build", "./backend/src/", "/warnaserror"],
         "include": ["**/*.cs", "**/*.vb"]
      }
   ]
}
